{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "quotes": "off",
    "eol-last": "off",
    "linebreak-style": "off",
    "arrow-body-style": "off",
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ]
  },
  "ignorePatterns": ["dist/", "build/"]
}
